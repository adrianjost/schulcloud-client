<header class="header">
	<nav class="container">
		<a id="title" href="/">
			<img class="logo" alt="{{theme.title}}" src="/images/logo/HPI-Schul-Cloud_Wort-Bildmarke-Banner_transparent.svg" />
		</a>
		{{#unless hideMenu}}
			<ul class="nav">
				<li>
					<a class="nav-link" href="/about">{{$t "home.header.link.aboutUs"}}</a>
				</li>
				{{#ifEnv "FEATURE_MINT_PAGES_ENABLED" "true"}}
				<li>
					<a class="nav-link" href="/mint-ec/willkommenspaket">{{$t "home.header.link.firstSteps"}}</a>
